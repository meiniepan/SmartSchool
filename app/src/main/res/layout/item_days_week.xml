<?xml version="1.0" encoding="utf-8"?>
<com.xiaoneng.ss.custom.widgets.SolangLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvDay2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/commonHint"
        android:visibility="gone"
        android:textSize="@dimen/sp_10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEventDay"
        android:layout_width="40dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="3dp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_height="3dp"
        android:src="@drawable/bac_white_oval" />
</com.xiaoneng.ss.custom.widgets.SolangLayout>