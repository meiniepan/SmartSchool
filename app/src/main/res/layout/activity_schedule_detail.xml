<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.xiaoneng.ss.custom.widgets.CustomTitleBar
        android:id="@+id/ctbDetailSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        >
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/ivAction1Schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_edit"
            />
        <ImageView
            android:id="@+id/ivAction2Schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/title_padding"
            android:src="@drawable/ic_delete"
            />
    </LinearLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/tintBac" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_padding"
                android:layout_marginTop="13dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="2dp"
                android:hint="时间" />

            <TextView
                android:id="@+id/tvBeginTimeSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="13dp"
                android:drawableLeft="@drawable/ic_begin"
                android:drawablePadding="2dp" />

            <TextView
                android:id="@+id/tvStopTimeSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_stop"
                android:drawablePadding="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/tintBac" />




                    <TextView
                        android:id="@+id/tvDetailSchedule"
                        android:layout_width="match_parent"
                        android:paddingStart="@dimen/title_padding"
                        android:paddingEnd="@dimen/title_padding"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="添加日志"
                         />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>