<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bac_white_bac_20"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="请确认学生状态"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNameAddStuDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="请确认学生状态"
        android:textSize="@dimen/sp_14" />

    <include layout="@layout/layout_split" />

    <TextView
        android:id="@+id/tvAction1AddStuDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="起晚了"
        android:textColor="@color/themeColor"
        android:textSize="@dimen/sp_18" />

    <include layout="@layout/layout_split" />

    <TextView
        android:id="@+id/tvAction2AddStuDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="堵车了"
        android:textColor="@color/themeColor"
        android:textSize="@dimen/sp_18" />

</LinearLayout>