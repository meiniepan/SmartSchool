<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="25dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSiteItemRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            android:textColor="@color/gray63"
            android:text="A01"
             />

        <TextView
            android:id="@+id/tvSiteItemRoomAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="A01"
            android:drawableLeft="@drawable/ic_didian"
            android:drawablePadding="5dp"
            android:layout_marginStart="10dp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSiteItemRoomCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="20人"
            android:drawableLeft="@drawable/ic_renshu"
            android:drawablePadding="5dp"
             />

        <TextView
            android:id="@+id/tvSiteItemRoomEquip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="设备"
            android:drawableLeft="@drawable/ic_shebei"
            android:drawablePadding="5dp"
            android:layout_marginStart="15dp"
             />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSiteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitColor"
        />
</LinearLayout>

