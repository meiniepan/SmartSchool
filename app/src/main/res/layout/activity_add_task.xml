<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.xiaoneng.ss.custom.widgets.CustomTitleBar
            style="@style/title_style"
            app:title="添加" />

        <TextView
            android:layout_width="57dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/title_padding"
            android:background="@drawable/bac_blue_bac_14"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white" />

    </RelativeLayout>

    <include layout="@layout/layout_split" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="2dp"
            android:hint="时间" />

        <TextView
            android:id="@+id/tvBeginAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/ic_begin"
            android:drawablePadding="2dp"
            android:hint="点击添加开始时间" />

        <TextView
            android:id="@+id/tvStopAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_stop"
            android:drawablePadding="2dp"
            android:hint="点击添加结束时间" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/tintBac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/title_padding"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/title_padding"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_canyuren"
                android:drawablePadding="2dp"
                android:hint="参与人" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvParticipant"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29dp"
                    android:overScrollMode="never" />
                <TextView
                    android:id="@+id/tvAddParticipant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:hint="添加负责人"
                    android:drawableTop="@drawable/ic_add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/title_padding"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/title_padding"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_canyuren"
                android:drawablePadding="2dp"
                android:hint="负责人" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPrincipal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29dp"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/tvAddPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:hint="添加负责人"
                    android:drawableTop="@drawable/ic_add" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/tintBac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/title_padding"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/title_padding"
            android:paddingBottom="20dp">

            <EditText
                android:id="@+id/addTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请添加任务标题" />

            <EditText
                android:id="@+id/addIntro"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请填写相关任务简介" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            style="@style/recycler_margin_style"
            android:paddingTop="75dp" />
    </LinearLayout>
</LinearLayout>