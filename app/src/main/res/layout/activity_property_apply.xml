<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.xiaoneng.ss.custom.widgets.CustomTitleBar
        android:id="@+id/ctbNoticeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="报修报送" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:background="@color/tintBac"
        style="@style/nes_scroll_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            android:orientation="vertical">


            <EditText
                style="@style/edit_style"
                android:id="@+id/etPropertyRemark"
                android:hint="填写工单"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_padding"
                android:layout_marginTop="15dp"
                android:text="上传图片" />

            <ImageView
                android:id="@+id/ivPropertyAddPic"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginStart="@dimen/title_padding"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/title_padding"
                android:src="@drawable/bac_add" />
            <TextView
                android:id="@+id/tvPropertyConfirm"
                style="@style/button_bottom_blue_bac_style"
                android:text="提交"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>