<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.xiaoneng.ss.custom.widgets.CustomTitleBar
            style="@style/title_style"
            app:title="日程" />

        <TextView
            android:id="@+id/tvActionTitle"
            android:layout_width="57dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/title_padding"
            android:background="@drawable/bac_blue_bac_5"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white" />

    </RelativeLayout>

    <include layout="@layout/layout_split" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tintBac"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:background="@drawable/bac_white_bac_20"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:paddingEnd="28dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <EditText
                        android:id="@+id/etThemeAddSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入您的主题" />
                </LinearLayout>

                <include layout="@layout/layout_split" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="2dp"
                android:hint="时间" />

            <LinearLayout
                android:id="@+id/llBeginTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBeginDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_begin"
                    android:drawablePadding="2dp"
                    android:hint="点击添加开始时间" />

                <TextView
                    android:id="@+id/tvBeginTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_begin"
                    android:drawablePadding="2dp"
                    android:hint="点击添加结束时间" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:background="@drawable/bac_white_bac_20"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:paddingEnd="28dp"
            android:paddingBottom="0dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_remark"
                android:drawablePadding="2dp"
                android:hint="备注" />

            <EditText
                android:id="@+id/etRemarkAddSchedule"
                style="@style/edit_style"
                android:layout_height="match_parent"
                android:gravity="start"
                android:hint="请输入备注"
                android:paddingTop="5dp"
                android:paddingBottom="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChooseColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:background="@drawable/bac_white_bac_20"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:paddingEnd="28dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/tvSa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选择日程颜色" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChooseColor"
                style="@style/recycler_style"
                android:layout_marginTop="9dp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>