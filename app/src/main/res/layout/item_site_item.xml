<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSiteItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/vSpace"
        android:layout_width="20dp"
        android:layout_height="0dp"
        />
<LinearLayout
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/vItemSiteLine1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/splitColor" />

        <TextView
            android:id="@+id/tvItemSiteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=""
            android:textColor="@color/commonHint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/vItemSiteLine2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/splitColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvItemSitePosition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tintBac"
                android:text=""
                android:textColor="@color/commonHint" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>