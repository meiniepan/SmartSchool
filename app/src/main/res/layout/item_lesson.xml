<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/llCourse"
    android:layout_height="74dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bac_white_bac_5"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp">


    <com.xiaoneng.ss.custom.widgets.MarqueeTextView
        style="@style/marquee_style"
        android:id="@+id/tvNameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_14" />

    <Space style="@style/space_style" />

    <com.xiaoneng.ss.custom.widgets.MarqueeTextView
        style="@style/marquee_style"
        android:id="@+id/tvNameTeacherCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/commonHint"
        android:textSize="@dimen/sp_12" />

    <Space style="@style/space_style" />

    <com.xiaoneng.ss.custom.widgets.MarqueeTextView
        style="@style/marquee_style"
        android:id="@+id/tvNameRoomCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/commonHint"
        android:textSize="@dimen/sp_12" />


</LinearLayout>