<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.core.widget.NestedScrollView
    style="@style/nes_scroll_style">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xiaoneng.ss.custom.widgets.RoundImageView
            android:id="@+id/ivAvatarMine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_performance" />

        <TextView
            android:id="@+id/tvNameMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="60dp"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="24dp">

            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="我的资料" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="账号与安全" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="选择孩子" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="我的邀请码" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="切换身份" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="绑定家长" />
            <com.xiaoneng.ss.custom.widgets.CustomJumpItem
                android:id="@+id/llItem7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_performance"
                app:jumpTitle="系统设置" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>