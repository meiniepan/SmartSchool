<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llNewPwd"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_padding"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="@dimen/title_padding"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etPwdRebind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:imeOptions="actionGo"
                android:background="@null"
                android:hint="请输入8位新密码"
                android:singleLine="true"
                android:inputType="text"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <include layout="@layout/layout_split_margin" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llRebind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_padding"
        android:layout_marginEnd="@dimen/title_padding"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/etPhoneRebind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:hint=""
                android:inputType="phone"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <include layout="@layout/layout_split_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etCaptchaRebind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:imeOptions="actionGo"
                android:inputType="number"
                android:maxLength="8"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tvSendCaptchaRebind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_padding"
                android:layout_marginEnd="26dp"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/commonBlue" />

        </LinearLayout>
        <include layout="@layout/layout_split_margin" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirmModifyPwd"
        style="@style/button_bottom_blue_bac_style"
        android:layout_alignParentBottom="true"
        android:text="确定" />
    <TextView
        android:id="@+id/tvConfirmModifyPwd2"
        android:visibility="gone"
        style="@style/button_bottom_blue_bac_style"
        android:layout_alignParentBottom="true"
        android:text="修改密码" />
</RelativeLayout>