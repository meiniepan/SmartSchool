<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/title_padding"
        android:layout_marginEnd="@dimen/title_padding"
        android:layout_marginTop="164dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etPhoneRebind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:background="@null"
                android:hint="请输入8位新密码"
                android:inputType="phone"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <include layout="@layout/layout_split_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etCaptchaRebind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:maxLength="8"
                android:textSize="@dimen/sp_20" />


        </LinearLayout>

        <include layout="@layout/layout_split_margin" />
        <TextView
            android:id="@+id/tvConfirmModifyPwd"
            style="@style/button_blue_bac_style"
            android:text="确定"
            android:layout_marginTop="85dp"
            />
    </LinearLayout>
</RelativeLayout>