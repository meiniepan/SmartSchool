<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xiaoneng.ss.custom.widgets.CustomTitleBar
            style="@style/title_style"
            app:title="任务" />

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/title_style"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.xiaoneng.ss.custom.widgets.CustomTabView2
                        android:id="@+id/tvTaskTab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:check="true"
                        app:text="全部任务" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.xiaoneng.ss.custom.widgets.CustomTabView2
                        android:id="@+id/tvTaskTab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text="进行中" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.xiaoneng.ss.custom.widgets.CustomTabView2
                        android:id="@+id/tvTaskTab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text="未发布" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.xiaoneng.ss.custom.widgets.CustomTabView2
                        android:id="@+id/tvTaskTab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text="已关闭" />
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpCircular"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivAddTask"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add_blue"
                android:layout_marginBottom="104dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/title_padding"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout></RelativeLayout>