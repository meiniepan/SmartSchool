<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:background="@color/oldBlue">

        <com.xiaoneng.ss.custom.widgets.CustomTitleBar
            android:id="@+id/ctbNoticeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:is_white_icon="true"
            app:title="工资条" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="1234"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:text="实发金额"
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        style="@style/nes_scroll_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tintBac"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="@dimen/title_padding"
            android:layout_marginEnd="@dimen/title_padding"
            android:layout_marginTop="-40dp"
            style="@style/recycler_style"
            android:id="@+id/rvSalaryDetail"
            android:background="@drawable/bac_white_bac_5"
            />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>