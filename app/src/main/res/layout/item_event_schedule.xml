<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bac_white_bac_20"
    android:orientation="vertical"
    android:paddingStart="@dimen/item_start_padding"
    android:layout_marginBottom="10dp"
    android:paddingTop="@dimen/item_top_padding"
    android:paddingEnd="@dimen/item_start_padding"
    android:paddingBottom="@dimen/item_top_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:id="@+id/vOval5"
            android:layout_width="10dp"
            android:visibility="gone"
            android:layout_height="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_blue_oval" />

        <TextView
            android:id="@+id/tvTitle5"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/tvTime5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
             />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llRemarkScheduleItem"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="60dp"
            android:text="备   注:"
            android:gravity="fill"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvRemark5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginStart="7dp"
            android:maxLines="2" />
    </LinearLayout>

</LinearLayout>