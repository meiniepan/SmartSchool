<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleBlack"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/bac_splash"
        android:scaleType="centerCrop"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="320dp"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bac_dialog_bac_40"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp"
        android:paddingStart="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="欢迎！"
            android:textSize="@dimen/sp_36"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="选择您所在的身份状态，加入汇文云体验\n智慧校园生活。 "
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="@color/titleBlack"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/iv_item_tea"
            style="@style/button_blue_bac_style"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="45dp"
            android:text="老师" />
        <TextView
            android:id="@+id/iv_item_stu"
            style="@style/button_blue_bac_style"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="16dp"
            android:text="学生" />
        <TextView
            android:id="@+id/iv_item_par"
            style="@style/button_blue_bac_style"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="16dp"
            android:text="家长" />

    </LinearLayout>
</RelativeLayout>
