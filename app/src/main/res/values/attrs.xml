<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTitleBar">
        <attr name="title" format="string"/>
        <attr name="is_white_icon" format="boolean"/>
        <attr name="is_hide_back" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomJumpItem">
        <attr name="jumpTitle" format="string"/>
        <attr name="icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomBadgeTextView">
        <attr name="text_badge" format="string"/>
        <attr name="show_badge" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomTabView">
        <attr name="text" format="string"/>
        <attr name="check" format="boolean"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SplashTimer">
        <attr name="timer_duration" format="integer"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="timer_padding" format="dimension"/>
        <attr name="timer_arcColor" format="color"/>
        <attr name="timer_arcStrokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="roundImage">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="StatusRecyclerView">
        <attr name="emptyLayout"  />
        <attr name="emptyViewDrawable" />
        <attr name="emptyViewText" />
        <attr name="errorLayout" />
        <attr name="errorViewDrawable" />
        <attr name="errorViewText" />
        <attr name="loadingLayout"/>
        <attr name="loadingViewText"/>
    </declare-styleable>

    <declare-styleable name="RefreshStatusRecyclerView">
        <attr name="emptyLayout"  />
        <attr name="emptyViewDrawable" />
        <attr name="emptyViewText" />
        <attr name="errorLayout" />
        <attr name="errorViewDrawable" />
        <attr name="errorViewText" />
        <attr name="loadingLayout"/>
        <attr name="loadingViewText" />
    </declare-styleable>
    <attr name="emptyLayout" format="reference" />      <!-- 自定义空布局的布局id -->
    <attr name="emptyViewDrawable"  format="reference"/><!-- 空布局中错误图片资源id：id为iv_empty的Iv -->
    <attr name="emptyViewText" format="string"/>        <!-- 空布局中的文案：id为tv_empty的tv -->
    <attr name="errorLayout" format="reference" />      <!-- 自定义错误布局的布局id -->
    <attr name="errorViewDrawable"  format="reference"/><!-- 错误布局中错误图片资源id：id为iv_error的iv -->
    <attr name="errorViewText" format="string"/>        <!-- 错误布局中的文案：id为tv_error的tv -->
    <attr name="loadingLayout" format="reference" />    <!-- 自定义加载中布局的布局id-->
    <attr name="loadingViewText" format="string"/>      <!-- 加载中布局中的文案：id为tv_loading的tv -->
</resources>